@model BancaBP.Models.Cuenta

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Cuenta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IntCliecodigo" class="control-label"></label>
                <select asp-for="IntCliecodigo" class ="form-control" asp-items="ViewBag.IntCliecodigo"></select>
            </div>
            <div class="form-group">
                <label asp-for="VchCuennumero" class="control-label"></label>
                <input asp-for="VchCuennumero" class="form-control" />
                <span asp-validation-for="VchCuennumero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VchCuentipo" class="control-label"></label>
                <input asp-for="VchCuentipo" class="form-control" />
                <span asp-validation-for="VchCuentipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DecCuensaldo" class="control-label"></label>
                <input asp-for="DecCuensaldo" class="form-control" />
                <span asp-validation-for="DecCuensaldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DttCuenfechacreacion" class="control-label"></label>
                <input asp-for="DttCuenfechacreacion" class="form-control" />
                <span asp-validation-for="DttCuenfechacreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

